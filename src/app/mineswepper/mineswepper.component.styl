.page-wrapper
    position relative
    .page-container
        position absolute
        top 20%
        left 35%
        width 35%
        border 1px solid grey
        box-shadow: 4px 5px 20px 6px #beacac
        border-radius 4px
        .game-heading
            padding: 10px;
            text-align: center;
            font-size: 25px;
            font-weight: bold;
            color: white;
            background-color: #03a9f4;
            border-top-left-radius: 4px;
            border-top-right-radius: 4px;
        .game-area
            text-align center
        .dashboard-details
            display flex
            .score-container
                flex-grow 1
                display flex
                .metric
                    flex-grow 1
                    text-align center
                    padding 10px 0 10px 0
            .reset-start
                flex-grow 0.5
                padding 10px 0 10px 0
                text-align center
                display flex
                justify-content space-evenly
                align-items center

.col
    padding-right: 0;
    padding-left: 0;
.row
    margin-right: 0;
    margin-left: 0;


.disable
    pointer-events none 
    opacity 0.5

.clickArea
    cursor pointer
    padding 5px
    margin 5px
    background-color #9dff009e
    color #fff0
    box-shadow: 0px 0px 6px 1px;
.clicked
    pointer-events none
    background-color #aba8a73d  !important
    box-shadow inset 0px 0px 6px 1px !important
    color black !important
    font-weight bold

.BombRed
    color red !important
    font-weight bold

.loading
    font-size 18px
    font-weight bold
    padding 15px

.mark
    background-color #ff00007a